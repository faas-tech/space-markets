{
  "name": "asset-leasing-offchain-tests",
  "version": "1.0.0",
  "description": "Off-chain test system for Asset Leasing Protocol",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "generate-samples": "tsx scripts/generate-sample-data.ts",
    "validate-schemas": "tsx scripts/validate-schemas.ts",
    "hash-metadata": "tsx scripts/hash-metadata.ts",
    "sync-with-deployment": "tsx scripts/sync-deployment.ts",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.22.4",
    "ethers": "^6.8.0",
    "viem": "^1.16.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "typescript": "^5.2.0",
    "tsx": "^3.14.0",
    "vitest": "^0.34.0",
    "@vitest/coverage-v8": "^0.34.0",
    "eslint": "^8.50.0",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0"
  }
}