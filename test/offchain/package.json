{
  "name": "asset-leasing-offchain-tests",
  "version": "1.0.0",
  "description": "Simple offchain test system for Asset Leasing Protocol",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "test": "node src/test.js",
    "test:integration": "./run-integration-tests.sh",
    "test:unit": "vitest run tests/integration.test.ts",
    "test:enhanced": "vitest run tests/enhanced-flow.test.ts",
    "test:watch": "vitest watch tests/integration.test.ts",
    "start": "node src/api.js",
    "dev": "node --watch src/test.js",
    "clean": "rm -rf test-output deployments test-data"
  },
  "dependencies": {
    "express": "^4.18.2",
    "ethers": "^6.8.0",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.19",
    "@types/node": "^20.8.0",
    "vitest": "^1.2.0",
    "@vitest/ui": "^1.2.0",
    "typescript": "^5.3.0"
  }
}
